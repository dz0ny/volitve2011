  head
    title= title
    link(rel='stylesheet', href='http://twitter.github.com/bootstrap/1.4.0/bootstrap.min.css')
    script(src="/socket.io/socket.io.js")
    script(src="/javascripts/raphael.js")
    script(src="/javascripts/g.raphael.js")
    script(src="/javascripts/g.pie.js")
    script(src="http://code.jquery.com/jquery-latest.min.js")
    script(src="http://ajax.microsoft.com/ajax/jquery.templates/beta1/jquery.tmpl.min.js")
    script(src="/javascripts/jquery.tablesorter.min.js")
    script
      $(function() {
          var socket = io.connect('http://delo.dz0ny.info:3000');
          socket.on('stanje', function (data) {
            izrisi(data.legenda,data.stanje,data.skupaj)
            tabela(data)
          });

          $.template(
            "stranka",
            "<tr><td>${ime}</td><td>${glasov}</td><td>${sedezev}</td></tr>"
          );

          function tabela(data){
              $("#tocno tbody").empty();
              $.tmpl( "stranka", data.stranke ).appendTo( $("#tocno tbody") );
              $("table#tocno").tablesorter({ sortList: [[1,0]] });
          }

          function izrisi(legenda,stanje, vseh){
            var r = Raphael("holder"),
                pie = r.piechart(130, 150, 120, 
                stanje, 
                { legend: legenda, legendpos: "east"});

            pie.hover(function () {
                this.sector.stop();
                this.sector.scale(1.1, 1.1, this.cx, this.cy);

                if (this.label) {
                    this.label[0].stop();
                    this.label[0].attr({ r: 7.5 });
                    this.label[1].attr({ "font-weight": 800 });
                }
            }, function () {
                this.sector.animate({ transform: 's1 1 ' + this.cx + ' ' + this.cy }, 500, "bounce");

                if (this.label) {
                    this.label[0].animate({ r: 5 }, 500, "bounce");
                    this.label[1].attr({ "font-weight": 400 });
                }
            });
          }
      });
